{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "auth",
      "type": "npm",
      "command": "cd client | ts-node auth.ts",
      "presentation": {
        "clear": true,
        "focus": true,
        "showReuseMessage": false
      },
      "isBackground": true
    },
    {
      "label": "test",
      "type": "npm",
      "command": "cd client | ts-node test.ts"
    },
    {
      "label": "open-journal-window",
      "command": "workbench.action.createTerminalEditorSide"
    },
    {
      "label": "enter-journal-cmd",
      "command": "workbench.action.terminal.writeDataToTerminal",
      "args": [
        "dnote view"
      ]
    },
    {
      "label": "display-journal-entries",
      "command": "workbench.action.terminal.runSelectedText"
    },
    {
      "label": "",
      "command": "workbench.action.terminal.changeIcon",
      "args": [""]
    },
    {
      "label": "journal",
      "dependsOrder": "sequence",
      "dependsOn": [
        "open-journal-window",
        "enter-journal-cmd",
        "display-journal-entries"
      ],
      "command": "workbench.action.terminal.renameWithArg",
      "args": [
        "Quest Journal"
      ]
    }
  ],
  "inputs": [
    {
      "id": "token"
    }
  ]
}