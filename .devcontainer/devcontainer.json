{
  "name": "Soroban Quest Dev Container",
  "image": "mcr.microsoft.com/devcontainers/rust:bullseye",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16",
    "storage": "32"
  },
  forwardPorts: [
    "desktop:6080",
    "ssh:2222",
    "client:3000"
  ],
  portsAttributes: {
    "6080": {
      onAutoForward: "openPreview",
      label: "VNC",
    },
    "3000": {
      onAutoForward: "notify",
      elevateIfNeeded: true
    },
    "2222": {
      onAutoForward: "notify",
      elevateIfNeeded: true,
      protocol: "https"
    }
  },
  privileged: true,
  "containerEnv": {
    "SOROBAN_RPC_URL": "https://soroban-testnet.stellar.org",
    "SOROBAN_NETWORK_PASSPHRASE": "Test SDF Network ; September 2015",
    "DISCORD_SERVER_ID": "897514728459468821",
    "DISCORD_CHANNEL_ID": "897514728459468821",
    "DISCORD_CLIENT_ID": "1309255291048558632",
    "CONTAINER_ID": "${devcontainerId}"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {},
    "ghcr.io/meaningful-ooo/devcontainer-features/homebrew:2": {},
    "ghcr.io/devcontainers-extra/features/autoenv:1": {},
    "ghcr.io/devcontainers/features/rust:1": {
      "targets": "wasm32-unknown-unknown",
      "profile": "default",
    },
    "ghcr.io/devcontainers-extra/features/vscode-cli:1": {},
    "ghcr.io/devcontainers-extra/features/dnote:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "test",
      "vncPort": "5901",
      "webPort": "6080"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "assets/Stellar-Quest-3.png"
      ]
    },
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb.vsix",
        "aaron-bond.better-comments",
        "ms-vscode.live-server",
        "Gruntfuggly.todo-tree",
        "adpyke.codesnap",
        "Equinusocio.vsc-material-theme-icons",
        "enkia.tokyo-night",
        "IBM.output-colorizer",
        "mintlify.document",
      ],
      "settings": {
        "workbench.colorTheme": "Tokyo Night Storm",
        "workbench.iconTheme": "eq-material-theme-icons-darker",
        "workbench.settings.editor": "json",
        "workbench.extensions.command.installFromVSIX": true,
        "terminal.integrated.allowChords": true,
        "terminal.integrated.shellIntegration.showCommandGuide": true,
        "terminal.integrated.shellIntegration.history": true,
        "security.workspace.trust.untrustedFiles": "open",
        "todo-tree.general.statusBar": "total",
        "todo-tree.general.showActivityBarBadge": true,
        "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
        "todo-tree.general.tags": [
          "<>QUEST",
          "<>TASK",
          "<>CHALLENGE",
        ],
        "todo-tree.tree.expanded": true,
        "todo-tree.tree.flat": true,
        "todo-tree.highlights.backgroundColourScheme": [
          "purple",
          "blue",
          "green",
        ],
        "todo-tree.tree.showCountsInTree": true
      }
    },
  },
  "initializeCommand": ".devcontainer/init.sh",
  "onCreateCommand": ".devcontainer/onCreate.sh",
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "postStartCommand": "",
  "postAttachCommand": ".devcontainer/postAttach.sh",
  "updateContentCommand": ".devcontainer/update.sh",
}