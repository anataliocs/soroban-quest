{
  "name": "Soroban Quest Dev Container",
  "remoteUser": "vscode",
  "image": "mcr.microsoft.com/devcontainers/rust:bullseye",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16",
    "storage": "32"
  },
  "containerEnv": {
    "SOROBAN_RPC_URL": "https://soroban-testnet.stellar.org",
    "SOROBAN_NETWORK_PASSPHRASE": "Test SDF Network ; September 2015",
    "DISCORD_SERVER_ID": "897514728459468821",
    "DISCORD_CHANNEL_ID": "897514728459468821"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers-extra/features/autoenv:1": {},
    "ghcr.io/devcontainers/features/rust": 1,
    "ghcr.io/devcontainers-extra/features/vscode-cli:1": {},
    "ghcr.io/devcontainers-extra/features/curl-homebrew:1": {},
    "ghcr.io/devcontainers-extra/features/cloudflared:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-extra/features/dnote:1": {},
    "ghcr.io/devcontainers-extra/features/starship:1": {},
    "ghcr.io/devcontainers-extra/features/npm-packages:1": {
      "@devcontainers/cli": "@devcontainers/cli"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "quests/1-hello-world/README.md",
        "quests/1-hello-world/STORY.md"
      ]
    },
    "vscode": {
      "workbench.settings.editor": "json",
      "terminal.integrated.shell.linux": "/bin/bash",
      "terminal.integrated.defaultProfile.linux": "zsh",
      "workbench.startupEditor": "readme",
      "workbench.extensions.command.installFromVSIX": true,
      "vscode.commands.executeCommand": true,
      "github.codespaces.devcontainerChangedNotificationStyle": "modal",
      "terminal.integrated.allowChords": true,
      "terminal.integrated.shellIntegration.showCommandGuide": true,
      "terminal.integrated.shellIntegration.history": true
    },
    "extensions": [
      "streetsidesoftware.code-spell-checker",
      "rust-lang.rust-analyzer",
      "vadimcn.vscode-lldb"
    ]
  },
  "initializeCommand": {
    "init": "chmod +x .devcontainer/init.sh",
    "onCreate": "chmod +x .devcontainer/onCreate.sh",
    "postAttach": "chmod +x .devcontainer/postAttach.sh",
    "postCreate": "chmod +x .devcontainer/postCreate.sh",
    "initScript": ".devcontainer/init.sh"
  },
  "onCreateCommand": ".devcontainer/onCreate.sh",
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "postStartCommand": "",
  "postAttachCommand": ".devcontainer/postAttach.sh",
  "updateContentCommand": "",
}