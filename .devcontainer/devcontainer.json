{
  "name": "Soroban Quest Dev Container",
  "remoteUser": "vscode",
  image: "mcr.microsoft.com/devcontainers/rust:bullseye",
  "hostRequirements": {
    "cpus": 4,
    memory: "16",
    storage: "32"
  },
  "containerEnv": {
    "SOROBAN_RPC_URL": "https://soroban-testnet.stellar.org",
    "SOROBAN_NETWORK_PASSPHRASE": "Test SDF Network ; September 2015",
    "DISCORD_SERVER_ID": "897514728459468821"
  },
  "features": {
    "ghcr.io/devcontainers/features/rust": 1,
    "ghcr.io/devcontainers-extra/features/vscode-cli:1": {},
    "ghcr.io/devcontainers-extra/features/curl-homebrew:1": {},
    "ghcr.io/devcontainers-extra/features/cloudflared:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "quests/1-hello-world/README.md",
      ]
    },
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "warp": {
            "path": "warp-terminal",
          }
        },
        "workbench.settings.editor": "json",
        "terminal.integrated.shell.linux": "/bin/bash",
        "terminal.integrated.defaultProfile.linux": "warp",
        "workbench.startupEditor": "readme",
        "workbench.extensions.command.installFromVSIX": true,
        "vscode.commands.executeCommand": true,
        "github.codespaces.devcontainerChangedNotificationStyle": "modal"
      },
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb"
      ]
    }
  },
  "initializeCommand": [
    "chmod +x .devcontainer/init.sh",
    "chmod +x .devcontainer/onCreate.sh",
    "chmod +x .devcontainer/postAttach.sh",
    "chmod +x client/test.ts"
  ],
  "onCreateCommand": ".devcontainer/onCreate.sh",
  "postCreateCommand": "stellar keys generate --global alice --network testnet --fund",
  "postStartCommand": ". ${NVM_DIR}/nvm.sh && nvm install --lts && pnpm install",
  "postAttachCommand": ".devcontainer/postAttach.sh",
  "updateContentCommand": "stellar contract build && ls $HOME/.config/Code/User/settings.json",
}